{
  "name": "extension-boilerplate",
  "version": "0.0.1",
  "description": "This is a boilerplate for building a browser extension with Vite, React, and TypeScript.",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:dev": "vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX_   _=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.mjs",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "bun build:hmr && (run-p wss build:watch)",
    "dev:firefox": "bun build:hmr && (run-p wss build:firefox:watch)",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "bun lint --fix",
    "prettier": "prettier . --write"
  },
  "type": "module",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "iconsax-react": "^0.0.8",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "^2.5.5",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "12.1.4",
    "@types/chrome": "0.1.11",
    "@types/jsdom": "^21.1.7",
    "@types/node": "24.3.3",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@vitejs/plugin-react": "5.0.2",
    "autoprefixer": "^10.4.21",
    "chokidar": "4.0.3",
    "cross-env": "10.0.0",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "magic-string": "^0.30.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "rollup": "4.50.1",
    "sass": "1.82.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "9.5.4",
    "tslib": "2.8.1",
    "typescript": "5.9.2",
    "vite": "7.1.5",
    "ws": "8.18.3"
  }
}